<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TWCA-組態管理系統</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryuicss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("回主畫面", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("首頁", "Index", "Home")</li>
                        <li>@Html.ActionLink("關於", "About", "Home")</li>
                        <li>@Html.ActionLink("連絡方式", "Contact", "Home")</li>*@
                    @Html.MvcSiteMap().Menu("BootstrapMenuHelperModel", false)
                </ul>
                @*@Html.Partial("_LoginPartial")*@

                <div class="text-right al" id="serachdiv">
                    <form class="form-inline">
                        <div class="form-group">
                            <select class="form-control" id="SearchAttributeID" style="margin-top:7px">
                                @*<option value="volvo">Volvo</option>
                                <option value="saab">Saab</option>
                                <option value="mercedes">Mercedes</option>
                                <option value="audi">Audi</option>*@
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="Keyword" placeholder="請填入關鍵字" style="margin-top:7px">
                        </div>
                        <button type="button" class="btn btn-info" style="margin-top:7px" id="Searchbtn">查詢</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2015 - 組態管理系統</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryform")
    @Scripts.Render("~/bundles/bootbox")
    @Scripts.Render("~/bundles/cmdb")
    @RenderSection("scripts", required: false)
    @RenderSection("IndexScript", required: false)
    @RenderSection("CreateAttributeScript", required: false)
    @RenderSection("ReviewAttributeScript", required: false)
    @RenderSection("EditAttributeScript", required: false)
    @RenderSection("EditProfileScript", required: false)
    @RenderSection("CreateProfileScript", required: false)
    @RenderSection("ReviewProfileScript", required: false)
    @RenderSection("CreateObjectScript", required: false)
    @RenderSection("EditObjectScript", required: false)
    @RenderSection("ReviewObjectScript", required: false)

    @RenderSection("CreateProfileRelationshipScript", required: false)
    @RenderSection("EditProfileRelationshipScript", required: false)
    @RenderSection("ReviewProfileRelationshipScript", required: false)
    @RenderSection("MainPageScript", required: false)
    @RenderSection("ImporrtCIScript", required: false)
  
    @*@@Scripts.Render("~/bundles/angular")
        @RenderSection("EditItemScript", required: false)
        @RenderSection("ProcessIndexScript", required: false)
        @RenderSection("ReviewIndexScript", required: false)
        @RenderSection("ReviewSummaryScript", required: false)
        @RenderSection("LogSearchScript", required: false)*@
</body>
</html>

